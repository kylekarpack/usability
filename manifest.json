{
  "manifest_version": 2,

  "name": "Usability Test",
  "description": "This extension provides facilities for conducting usability tests on websites.",
  "version": "0.1",

  "permissions": [
    "storage",
	"tabs"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
	{
	"matches": ["http://*/*"],
	"js": ["jquery.min.js", "heatmap.js", "contentscript.js"]
	}
  ],
  "commands": {
    "start_usability": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Start Test"
    },
    "stop_usability": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Stop Test"
    }
  }
}